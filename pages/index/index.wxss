/**index.wxss**/
.parent_container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.child_container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

._button{
  height: 100px;
  background: linear-gradient(to bottom, rgb(136, 211, 203) ,rgb(43, 202, 207)); 
  border-radius: 25px;
  border-bottom: 10px solid rgb(25, 170, 180);
  font-weight: 600;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.05);
  font-size: 20px;
  text-align: center;
  color:black;
  box-shadow: 0px 10px 0px rgba(0,0,0,.2);
  cursor: pointer;
}

